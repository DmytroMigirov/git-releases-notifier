# Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Telegram Chat ID
TELEGRAM_CHAT_ID=your_chat_id

# Slack Webhook URL
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Notification channels (comma-separated: telegram, slack)
NOTIFICATION_CHANNELS=telegram,slack

# GitHub Token (optional for public repositories but recommended)
GITHUB_TOKEN=your_github_token

# Interval for checking releases (in seconds)
CHECK_INTERVAL=300

# Comma-separated list of repositories to monitor (e.g., "owner/repo,owner/repo2")
REPOSITORIES=owner/repo,owner/repo2